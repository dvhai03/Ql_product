          var retVal = confirm("Do you really want to delete?" );
               if( retVal == true ){
              location.href = '/product/delete/'+a
                  return true;
               }
               else{
                  Document.write ("User does not want to continue!");
                  return false;
               }
            }
            function locTL(evt) {
              if(evt.target.value==="a"){
                location.href='/product/ádads';
              }else{
