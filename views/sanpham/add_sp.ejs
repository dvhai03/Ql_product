<body>
  <!-- Start your project here-->
  <section class="vh-100" style="background-color: #eee;">
    <form class="mx-1 mx-md-4" method="post" action=""  enctype="multipart/form-data">
    <div class="container h-100 ">
      <div class="row d-flex justify-content-center align-items-center h-100 ">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px; margin-top: 50px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <p class="text-center h1 fw-bold " style="margin-bottom: 20px;">Add San Pham</p>
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                

              

                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            <input type="text" id="form3Example1c" class="form-control" name="tensp"/>
                            <label class="form-label" for="form3Example1c">Tên sản phẩm</label>
                          </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">

                        <select class="form-select" aria-label="Default select example" name="ten_tl">
                            <option selected disabled value="">Thể Loại </option>
                           <% arrTL.forEach((row) => { %>
                            <option value=<%=row._id  %> > <%=row.ten_tl  %> </option>
                           <% }) %>
                            
                          </select>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                 
                        <div class="form-outline flex-fill mb-0">
                            <input type="text" id="form3Example4c" class="form-control" name="mota" />
                            <label class="form-label" for="form3Example4c">Mô tả</label>
                          </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                    
                        <div class="form-outline flex-fill mb-0">
                            <input type="number" id="form3Example4cd" class="form-control" name="giatien"/>
                            <label class="form-label" for="form3Example4cd">Giá tiền</label>
                          </div>
                    </div>



                 
                  

                </div>
                
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                   
                    <div id="file-upload-form" class="uploader" >
                        <input id="file-upload" type="file" name="image" accept="image/*" />
                        <label for="file-upload" id="file-drag" style="float: left;
                        clear: both;
                        width: 100%;
                        text-align: center;
                        background: #fff;
                        border-radius: 7px;
                        border: 3px solid #eee;
                        transition: all .2s ease;
                        user-select: none;">
                          <img id="file-image" src=""  style="margin-top: 20px;" >
                          <div id="start">
                            <i class="fa fa-download" aria-hidden="true"></i>
                            <div>Select a file or drag here</div>
                            <div id="notimage" class="hidden">Please select an image</div>
                            <span id="file-upload-btn" class="btn btn-primary">Select a file</span>
                          </div>
                          <div id="response" class="hidden">
                            <div id="messages"></div>
                          </div>
                        </label>
  
                      </div>
  
                </div>
             
              </div>
              <div style="text-align: center; margin-top: 20px;">
                <a href="/product" class="btn btn-secondary " style="margin-right: 20px;" >Close</a>
                 <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </div>
           
          </div>
        
         
        </div>
      </div>
      
    </div>
</form>
 
  </section>
  <!-- End your project here-->

  <!-- MDB -->
  <script type="text/javascript" src="/js/a.js"></script>
    <script type="text/javascript" src="/js/mdb.min.js"></script>

    <!-- Custom scripts -->
    <script type="text/javascript"></script>
</body>

</html>